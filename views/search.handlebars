  <!-- Comment Section -->
  <div class="container scale-transition" id="searchResultsComments">
	  
		<div class="row">
		{{#each comments}}
		<div class="col s4">
			<div class="card blue-grey darken-1">
			<div class="card-content white-text">
			<p>{{comment}}</p>
			<span>{{username}}</span>
			</div>
		</div>
		</div>
		{{/each}}
		</div>

    </div>

	{{#if message}}
		<h5 class="center-align">{{message}}</h1>
	{{/if}}
  </div>
</div>

